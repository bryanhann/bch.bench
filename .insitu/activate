#!/source/this/sh

echo
echo BEGIN POET ACTIVATION
export_ () { export $1=$2; }

export_ POET        $(dirname ${PWD})
export_ POET_BIN    ${POET}/bin
export_ POET_USER   ${POET}/user
export_ POET_POEM   ${POET}/poem
export_ POET_VENDOR ${POET}/.vendor
export_ PATH        ${POET_BIN}:${PATH}
export_ PATH        $(./path.py clean)

. src.poet.bless -u $POET poem -b main
. src.poet.bless -u $POET bozo
. src.poet.bless -u $POET bch

# activate the dotfile via blessed.bozo.
. blessed.bozo.src dot $*
