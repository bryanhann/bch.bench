#!/source/this/sh
export_ () { export $1=$2; }
export_ POET        $(dirname ${PWD})
export_ POET_BIN    ${POET}/bin
export_ POET_LOG     ${HOME}/.poet.log
export_ POET_BLESSED ${HOME}/.blessed
export_ PATH        ${POET_BIN}:${PATH}
export_ PATH        $(./path.py clean)
mkdir -p            ${HOME}/.local/bin/
cp ${POET}/lbin/*   ${HOME}/.local/bin/

poet.blessed.install poem -b main
poet.blessed.install user -b newstyle
. blessed.user $*
