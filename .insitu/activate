#!/source/this/sh

export POET_ROOT=$(dirname ${PWD})
export POET_BASE=${HOME}/_BASE_
export POET_INFO=${HOME}/_BASE_/_INFO_
export POET_FLAG=${POET_ROOT}/.flag
export POET_PBIN=${POET_ROOT}/pbin
export POET_LOG=${POET_ROOT}/.log
dot () { . $POET_PBIN/dot.$*; }
run () { echo "$ [$*]" ; $* ; }
mon () { . blessed.monty ; }
mkdir -p         ~/.local/bin

echo
poet.line enter POET
    dot path.prepend ~/.local/bin
    dot path.prepend ${POET_ROOT}/bin
    dot path.clean
    . poet.bless bozo -b bozo
    run . blessed.bozo $*
    . poet.bless bats
    . poet.bless poem -b main
    . poet.bless monty
poet.line exit POET

echo
echo "Type 'mon' to activate the monty prompt."
echo
