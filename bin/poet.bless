#!/bin/bash
C=
I=
A=

v=$(poet.flag stat poet.bless.verbose)
[ "$v" = "[short]" ] && echo "$ [poet.bless $*]"
[ "$v" = "[long]" ]  && echo "$ [poet.bless $*]"

while true; do
    name=$1 ; shift
    [ $name. = -c. ] && C="-c" && continue
    [ $name. = -i. ] && I="-i" && continue
    [ $name. = -a. ] && A="-a" && continue
    break
done

# XXX Workaround for bug in [poet.flag].
# Always install.
I=-i

${POET_PBIN}/poet.install.py $I $C -- $name $*

[ "$A" = "-a" ] && . blessed.$name activate
